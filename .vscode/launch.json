{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Uvicorn: Run",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "--port",
                "8999",
                "src.main:app",
                "--reload"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "windows": {
                "console": "integratedTerminal"
            },
            "preLaunchTask": "Activate Virtual Environment"
        }
    ]
}